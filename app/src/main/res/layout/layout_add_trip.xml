<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back_button_img"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/addDriverTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Add Driver"
        android:textSize="18sp"
        android:textColor="@color/white"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addDriverProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/addDriverTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_user"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        />



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/addDriverProfile"
        app:layout_constraintBottom_toBottomOf="@+id/addDriverProfile"
        android:layout_marginStart="60dp"
        app:cardBackgroundColor="@color/quill_green"
        app:cardCornerRadius="100dp"

        >
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:elevation="5dp"/>



    </androidx.cardview.widget.CardView>



    <EditText
        android:id="@+id/editTextVehicle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:ems="10"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/black"
        android:hint="Firstname"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/addDriverProfile"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/editTextDriver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:ems="10"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/black"
        android:hint="Lastname"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextVehicle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/editTextStartTime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:ems="10"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/black"
        android:hint="License No."
        android:inputType="text"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextDriver"
        app:layout_constraintStart_toStartOf="parent"
        />


    <EditText
        android:id="@+id/editTextEndTime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:ems="10"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/black"
        android:hint="Phone"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextStartTime"
        app:layout_constraintStart_toStartOf="parent"
        />


    <EditText
        android:id="@+id/editTextStartLocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:ems="10"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/black"
        android:hint="Email"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextEndTime"
        app:layout_constraintStart_toStartOf="parent"
        />


    <EditText
        android:id="@+id/editTextEndLocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_baseline_directions_car_24"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:ems="10"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/black"
        android:hint="Vehicle"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextStartLocation"
        app:layout_constraintStart_toStartOf="parent"
        />


    <EditText
        android:id="@+id/editTextPurpose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:ems="10"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/black"
        android:hint="Date of Birth"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextEndLocation"
        app:layout_constraintStart_toStartOf="parent"
        />


    <EditText
        android:id="@+id/editTextDistance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:ems="10"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/black"
        android:hint="Date of Birth"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPurpose"
        app:layout_constraintStart_toStartOf="parent"
        />


    <EditText
        android:id="@+id/editFuelUsed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edt"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:ems="10"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/black"
        android:hint="Date of Birth"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextDistance"
        app:layout_constraintStart_toStartOf="parent"
        />






</androidx.constraintlayout.widget.ConstraintLayout>