<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        />

    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="Insert image url or upload from the phone gallery"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter Image Url">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/imageUrlEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:weightSum = "2"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@color/quill_green"
            android:layout_marginEnd="10dp"
            android:text="Upload" />

        <!--sample button to submit entered data inside from edit text-->
        <Button
            android:id="@+id/closeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:textColor="@color/white"
            android:background="@color/quill_red"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:text="Close" />

        <!--sample button to submit entered data inside from edit text-->
        <Button
            android:id="@+id/urlBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:textColor= "@color/white"
            android:visibility="gone"
            android:layout_weight="2"
            android:background="@color/quill_green"
            android:layout_marginHorizontal="16dp"
            android:text="Submit Url" />


    </LinearLayout>
    <!--sample button to submit entered data inside from edit text-->
</LinearLayout>