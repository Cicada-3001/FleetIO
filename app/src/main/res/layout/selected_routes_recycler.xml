<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp">


        <ImageView
            android:id="@+id/startLocationDrawable"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_location_on_24"
            />

        <TextView
            android:id="@+id/startLocationNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nairobi"
            app:layout_constraintStart_toEndOf="@+id/startLocationDrawable"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp"/>



        <View
            android:layout_width="2dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/startLocationDrawable"
            android:background="@color/black"
            android:layout_gravity="left"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/endLocationDrawable"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_location_on_24"
            />

        <TextView
            android:id="@+id/endLocationNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nairobi"
            app:layout_constraintStart_toEndOf="@+id/endLocationDrawable"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="8dp"/>








</androidx.constraintlayout.widget.ConstraintLayout>