<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_6"
    android:paddingHorizontal="16dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>

    <TextView
        android:id="@+id/forgotPswTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"

     />


    <TextView
        android:id="@+id/RemindTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let us Remind  You."
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/EnterEmailPromptTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Just Enter Your Email."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/RemindTv"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        android:layout_marginTop="10dp"
        />


    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edt"
        android:drawablePadding="5dp"
        android:ems="10"
        android:elevation="5dp"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterEmailPromptTv" />



    <Button
        android:id="@+id/forgotPswBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:background="@drawable/rounded_button"
        android:text="RESEND"
        android:textSize="15sp"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTextEmailAddress" />











</androidx.constraintlayout.widget.ConstraintLayout>