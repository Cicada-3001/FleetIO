<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow android:background="#F0F7F7" android:padding="5dp" android:paddingTop="15dp" android:paddingBottom="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                >
                <TextView
                    android:id="@+id/vehNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/quill_blue"
                    android:layout_marginBottom="4dp"
                    android:textSize="15dp"
                    android:text="Nissan NQR KBC 123C" />

                <TextView
                    android:id="@+id/distanceLabelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehNameTv"
                    android:text="Distance: " />

                <TextView
                    android:id="@+id/distanceValueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/quill_blue"
                    android:layout_below="@+id/vehNameTv"
                    android:layout_toEndOf="@+id/distanceLabelTv"
                    android:text="181km" />

                <TextView
                    android:id="@+id/timeLabelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Trip time:"
                    android:layout_below="@+id/distanceLabelTv"
                    />

                <TextView
                    android:id="@+id/timeValueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/quill_blue"
                    android:layout_marginBottom="4dp"
                    android:layout_toEndOf="@+id/timeLabelTv"
                    android:textSize="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_below="@+id/distanceLabelTv"
                    android:text="1 hour 29 min" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="22dp"
                >


                <TextView
                    android:id="@+id/tripNoLabelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No of trips:" />


                <TextView
                    android:id="@+id/tripNoValueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tripNoLabelTv"
                    android:text="6"
                    android:textColor="@color/quill_blue"
                    android:layout_marginStart="4dp"
                    />

                <TextView
                    android:id="@+id/fuelLabelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="15dp"
                    android:layout_below="@+id/tripNoLabelTv"
                    android:text="Fuel:" />

                <TextView
                    android:id="@+id/fuelValueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/quill_blue"
                    android:layout_marginBottom="4dp"
                    android:layout_below="@+id/tripNoLabelTv"
                    android:layout_toEndOf="@+id/fuelLabelTv"
                    android:textSize="15dp"
                    android:text="8 litres"
                    android:layout_marginStart="4dp"

                    />

                <TextView
                    android:id="@+id/revenueLabelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revenue:"
                    android:layout_below="@+id/fuelLabelTv"

                    />

                <TextView
                    android:id="@+id/revenueValueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3200 ksh"
                    android:layout_toEndOf="@+id/revenueLabelTv"
                    android:layout_below="@+id/fuelLabelTv"
                    android:textColor="@color/quill_blue"
                    android:layout_marginStart="4dp"
                    />


            </RelativeLayout>













        </TableRow>


    </TableLayout>









</LinearLayout>