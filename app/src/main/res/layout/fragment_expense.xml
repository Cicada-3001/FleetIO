<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".revenueExpense.Expense"
    android:orientation="vertical"
    android:paddingTop="11dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/figma_red"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentStart="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maintenances"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="5dp"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/maintenanceTotalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 ksh"
                    android:textColor="@color/figma_red"
                    android:layout_marginHorizontal="15dp"
                    android:textStyle="bold"
                    android:layout_marginVertical="5dp"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <View
                    android:layout_width="2dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/lightgrey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recMaintenances"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/figma_yellow"
                    app:cardCornerRadius="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fuel"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="48dp"
                        android:layout_marginVertical="5dp"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/fuelTotalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 ksh"
                    android:textStyle="bold"
                    android:textColor="@color/figma_yellow"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="5dp"
                    android:layout_alignParentEnd="true"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/lightgrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recFuel"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>.
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/quill_blue"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="45dp"
                        android:layout_marginVertical="5dp"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/otherTotalTv"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0 ksh"
                    android:textColor="@color/quill_blue"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="5dp"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="2dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/lightgrey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recOthers"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</LinearLayout>


